@model IEnumerable<GestãoDeProjeto.Models.Usuario>

@{
    ViewData["Title"] = "Usuários";
}

<h1>Usuários <a asp-action="Create" class="btnNovo btn btn-success">Novo</a></h1>
<p>Equipe do Projeto</p>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
               
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.status)
            </th>
            <!--<th>
                @Html.DisplayNameFor(model => model.dataNasc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.endereco)
            </th> -->
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cargo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img  src="~/img/userICO.svg" style="height:50px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td class="statusUser">
                ● @Html.DisplayFor(modelItem => item.status)
            </td>
           <!-- <td>
                @Html.DisplayFor(modelItem => item.dataNasc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.endereco)
            </td> -->
            <td> 
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cargo)
            </td> 
            <td>
                
                <a asp-action="Edit" asp-route-id="@item.id"><img src="~/img/editarICO.png" class="botoesTabela" /></a> |
               
                <a asp-action="Details" asp-route-id="@item.id"> <img src="~/img/detalhesICO.webp" class="botoesTabela" /></a> |
               
                <a asp-action="Delete" asp-route-id="@item.id"> <img src="~/img/excluirICO.webp" class="botoesTabela" /></a>
            </td>
        </tr>
}
    </tbody>

</table>

